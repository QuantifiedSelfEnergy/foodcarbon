<div id="game">
<div id="gamecenter">
	
<div id="question"><h1><%= @q.q %></h1></div>
<% if @q.a3 != nil %>
<div class="answer_button" id="1"><%= @q.a1  %></div>
<div class="answer_button" id="2"><%= @q.a2 %></div>
<div class="answer_button" id="3"><%= @q.a3 %></div>
<% else %>
<div class="answer_button long" id="1"><%= @q.a1  %></div>
<div class="answer_button long" id="2"><%= @q.a2 %></div>
<% end %>

<div id="counter"><%= session[:count]+1 %> / 5</div>

<div id="respuesta" style="display: none;" data-value="<%=  @q.c.to_s %>"></div>
<div id="count" style="display: none;" data-value="<%=  @count %>"></div>
<div id="respuesta2" style="display: none;" data-value=""></div>

</div> 
<div id="next_button" style="display: none;">Next</div>
</div> 

<script type="text/javascript">
$(".answer_button").click(function() {
	var correct = document.getElementById("respuesta").getAttribute('data-value');
	var div = document.getElementById(correct);
	div.style.backgroundColor = 'green';
	document.getElementById("respuesta2").setAttribute('data-value',this.id);
	document.getElementById("next_button").style.display = "inline";
	if(this.id != correct){
		var div2 = document.getElementById(this.id);
		div2.style.backgroundColor = 'red';	
	};	
});
$("#next_button").click(function() {
	location.href = "http://localhost:3000/next/?a="+document.getElementById("respuesta2").getAttribute('data-value'); 
});
</script>